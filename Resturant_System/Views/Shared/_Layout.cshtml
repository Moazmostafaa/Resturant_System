<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
 
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Resturant System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @{
                if (Convert.ToInt32(Session["TyperId"]) == 2)
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("EditProfile", "EditProfile", "User")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                }
                else if (Convert.ToInt32(Session["TyperId"]) == 1)
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("View Items", "Index", "Admin")</li>
                            <li>@Html.ActionLink("Add New Item", "Create", "Admin")</li>                
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                }
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
